@model proyecto_melany.Models.usuariomodel

<div class="container text-center w75">
    <h1>Registrarse</h1>
    <form asp-action="Register" asp-controller="Usuario" method="post">
        <div class="form-group">
            <label for="Usuario_Nombre">Nombre</label>
            <input type="text" class="form-control" id="Usuario_Nombre" name="Usuario_Nombre" asp-for="Usuario_Nombre"
                required />
            <span asp-validation-for="Usuario_Nombre" class="text-danger"></span>
        </div>
        
   <div class="form group">
            <label for="Usuario_Apellido">Apellido</label>
            <input type="text" class="form-control" id="Usuario_Apellido" name="Usuario_Apellido"
                asp-for="Usuario_Apellido" required />
            <span asp-validation-for="Usuario_Apellido"></span>
        </div>
      
   <div class="form group">
            <label for="Usuario_Correo">Correo</label>
            <input type="email" class="form-control" id="Usuario_Correo" name="Usuario_Correo"
                asp-for="Usuario_Correo" required />
            <span asp-validation-for="Usuario_Correo"></span>
        </div>
         <div class="form group">
            <label for="Usuario_Constrasena">Contrasena</label>
            <input type="password" class="form-control" id="Usuario_Constrasena" name="Usuario_Constrasena"
                asp-for="Usuario_Constrasena" required />
            <span asp-validation-for="Usuario_Constrasena"></span>
        </div>
        <button type="submit"class="btn-primary">Registrar</button>

    </form>
</div>